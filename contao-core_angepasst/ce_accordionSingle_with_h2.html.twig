{#  Ausgabe des Accordion-Headers als h2 mit zusaetzlichem span-tag #}

<section class="{{ class }} ce_accordion ce_text block" {{ cssID }}{% if style %} style="{{ style }}"{% endif %}>

    <div class="{{ toggler }}"{% if headlineStyle %} style="{{ headlineStyle }}"{% endif %}>
        <h2><span>{{ headline }}</span></h2>
    </div>

    <div class="{{ accordion }}">
        <div>
            {% if not addBefore %}
                {{ text|raw }}
            {% endif %}

            {% if addImage %}
                {{ include('@Contao/image') }}
            {% endif %}

            {% if addBefore %}
                {{ text|raw }}
            {% endif %}
        </div>
    </div>

</section>